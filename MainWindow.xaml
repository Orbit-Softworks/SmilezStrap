<Window x:Class="SmilezStrap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmilezStrap" Height="600" Width="900"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
   
    <Window.Resources>
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="#8B0000"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="Transparent" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="#8B0000" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        <Border Background="#0A0A0A" CornerRadius="8" BorderThickness="1" BorderBrush="#8B0000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8,0,0,8" BorderThickness="0,0,1,0" BorderBrush="#333333">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid Height="40" VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" Margin="15,0" VerticalAlignment="Center">
                                    <TextBlock Text="SmilezStrap" Foreground="#FF4444" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                            <StackPanel Margin="0,50,0,0">
                                <Button Style="{StaticResource MenuButton}" Background="#2A2A2A" Foreground="#FF4444" x:Name="HomeButton" Click="HomeButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ " FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="Home"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" x:Name="SettingsButton" Click="SettingsButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âš™" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="Settings"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MenuButton}" x:Name="AboutButton" Click="About_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â„¹" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="About"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel VerticalAlignment="Bottom" Margin="15,0,15,20">
                                <Button x:Name="CheckUpdatesButton" 
                                        Content="ðŸ”„ Check for Updates" 
                                        Height="40" 
                                        Style="{StaticResource SettingsButton}" 
                                        Click="CheckUpdatesButton_Click" 
                                        Margin="0,0,0,12"
                                        FontSize="13"/>
                                <TextBlock x:Name="VersionText" 
                                           Text="v1.0.70" 
                                           Foreground="#666" 
                                           FontSize="10" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <Grid Grid.Column="1">
                    <Grid Height="40" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                            <Button Content="â”€" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#999" FontSize="13" Click="MinimizeButton_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="âœ•" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#999" FontSize="13" Click="CloseButton_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8B0000"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <StackPanel x:Name="HomeView" Margin="40,60,40,40" VerticalAlignment="Center">
                        <StackPanel.RenderTransform>
                            <TranslateTransform x:Name="HomeViewTransform" Y="0"/>
                        </StackPanel.RenderTransform>
                        <TextBlock Text="Welcome to SmilezStrap" FontSize="24" FontWeight="SemiBold" Foreground="#FF4444" Margin="0,0,0,8"/>
                        <TextBlock Text="Launch Roblox, Studio, or FFlag Injector to get started" FontSize="13" Foreground="#999" Margin="0,0,0,30"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Height="100" Style="{StaticResource PrimaryButton}" Click="LaunchRoblox_Click">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ®" FontSize="28" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Launch Roblox" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="2" Height="100" Style="{StaticResource PrimaryButton}" Click="LaunchStudio_Click">
                                <StackPanel>
                                    <TextBlock Text="ðŸ› ï¸" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Launch Studio" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="4" Height="100" Style="{StaticResource PrimaryButton}" Click="LaunchFFlag_Click">
                                <StackPanel>
                                    <TextBlock Text="ðŸš©" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="FFlag Injector" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Border Background="#1A1A1A" CornerRadius="6" Padding="15" Margin="0,25,0,0" BorderThickness="1" BorderBrush="#333333">
                            <StackPanel>
                                <TextBlock Text="â„¹ Quick Info" FontSize="12" FontWeight="SemiBold" Foreground="#FF4444" Margin="0,0,0,8"/>
                                <TextBlock Text="SmilezStrap automatically manages your Roblox installation and syncs your settings." FontSize="11" Foreground="#AAA" TextWrapping="Wrap"/>
                                <TextBlock Text="All settings are saved and synced between app and Roblox." FontSize="11" Foreground="#888" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <ScrollViewer x:Name="SettingsView" Margin="35,50,35,30" Visibility="Collapsed" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                        <ScrollViewer.RenderTransform>
                            <TranslateTransform x:Name="SettingsViewTransform" Y="0"/>
                        </ScrollViewer.RenderTransform>

                        <StackPanel MaxWidth="800">
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="âš™ï¸ Global Settings" FontSize="18" FontWeight="SemiBold" Foreground="#FF4444"/>
                                <TextBlock Text="Set in-game settings from SmilezStrap menu" FontSize="12" Foreground="#888" Margin="0,4,0,0"/>
                            </StackPanel>

                            <Border Background="#1A1A1A" CornerRadius="8" Padding="15" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#333333">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Set as Read-Only" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="Prevent Roblox from overriding global settings" Foreground="#888" FontSize="11" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    <CheckBox x:Name="ReadOnlyCheckBox" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Rendering and Graphics" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,10"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Graphics Quality" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="Set the graphics quality of your game" Foreground="#888" FontSize="11" Margin="0,3,0,0"/>
                                            </StackPanel>
                                            <TextBlock x:Name="GraphicsQualityValue" Grid.Column="1" Text="Level 1" Foreground="#FF4444" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Slider x:Name="GraphicsQualitySlider" 
                                                Minimum="0" 
                                                Maximum="9" 
                                                Value="1" 
                                                TickFrequency="1" 
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="GraphicsQualitySlider_ValueChanged"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <StackPanel>
                                        <TextBlock Text="Framerate Limit" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="Unlock framerate limit for Roblox" Foreground="#888" FontSize="11" Margin="0,3,0,10"/>
                                        <TextBox x:Name="FpsLimitTextBox" Text="9999"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <TextBlock Text="User Interface and Layout" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,10"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Transparency" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="Custom transparency for UI elements" Foreground="#888" FontSize="11" Margin="0,3,0,0"/>
                                            </StackPanel>
                                            <TextBlock x:Name="TransparencyValue" Grid.Column="1" Text="1.0" Foreground="#FF4444" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>
                                        <Slider x:Name="TransparencySlider" Minimum="0" Maximum="1" Value="1" TickFrequency="0.1" ValueChanged="TransparencySlider_ValueChanged"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Reduced Motion" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Text="Removes the animation on the escape menu" Foreground="#888" FontSize="11" Margin="0,3,0,0"/>
                                        </StackPanel>
                                        <CheckBox x:Name="ReducedMotionCheckBox" Grid.Column="1" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <TextBlock Text="Other" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,10"/>

                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <StackPanel>
                                        <TextBlock Text="Mouse Sensitivity" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="Change how fast the camera will move in-game" Foreground="#888" FontSize="11" Margin="0,3,0,10"/>
                                        <TextBox x:Name="MouseSensitivityTextBox" Text="0.360000014"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="8" Padding="15" BorderThickness="1" BorderBrush="#333333">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="VR Enabled" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Text="Enable VR support" Foreground="#888" FontSize="11" Margin="0,3,0,0"/>
                                        </StackPanel>
                                        <CheckBox x:Name="VREnabledCheckBox" Grid.Column="1" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <Button x:Name="SaveAllSettingsButton" 
                                    Content="ðŸ’¾ Save All Settings" 
                                    Height="44" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Click="SaveAllSettingsButton_Click" 
                                    FontSize="14"/>

                            <TextBlock Text="Changes will be applied on next Roblox launch"
                                       Foreground="#666" FontSize="10" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer x:Name="AboutView" Margin="40,60,40,40" Visibility="Collapsed" VerticalScrollBarVisibility="Hidden">
                        <ScrollViewer.RenderTransform>
                            <TranslateTransform x:Name="AboutViewTransform" Y="0"/>
                        </ScrollViewer.RenderTransform>
                        <StackPanel>
                            <TextBlock Text="â„¹ About SmilezStrap" FontSize="20" FontWeight="SemiBold" Foreground="#FF4444" Margin="0,0,0,20"/>
                            <Border Background="#1A1A1A" CornerRadius="6" Padding="20" BorderThickness="1" BorderBrush="#333333">
                                <StackPanel>
                                    <TextBlock x:Name="AboutContentText" TextWrapping="Wrap" Foreground="#CCC" FontSize="12" LineHeight="20" Text="Loading..."/>
                                </StackPanel>
                            </Border>
                            <Border Background="#1A1A1A" CornerRadius="6" Padding="15" Margin="0,15,0,0" BorderThickness="1" BorderBrush="#333333">
                                <StackPanel>
                                    <TextBlock Text="Links" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                    <Button Content="ðŸŒ Visit GitHub Repository" Height="35" Margin="0,0,0,8" Style="{StaticResource SettingsButton}" Click="VisitGitHub_Click" Cursor="Hand"/>
                                    <Button Content="ðŸ’¬ Join Discord Server" Height="35" Style="{StaticResource SettingsButton}" Click="Discord_Click" Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Border x:Name="DiscordPopup" Grid.ColumnSpan="2" Background="#CC000000" Visibility="Collapsed">
                        <Border Background="#1A1A1A" CornerRadius="8" BorderThickness="2" BorderBrush="#8B0000" Width="400" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Grid>
                                <StackPanel Margin="30" VerticalAlignment="Center">
                                    <TextBlock Text="âš ï¸ External Link" FontSize="18" FontWeight="SemiBold" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock Text="You are about to be redirected to our Discord server." FontSize="13" Foreground="#CCC" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Are you sure you want to continue?" FontSize="13" Foreground="#999" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Yes, Continue" Height="40" Style="{StaticResource PrimaryButton}" Click="DiscordPopupYes_Click" Cursor="Hand"/>
                                        <Button Grid.Column="2" Content="Cancel" Height="40" Style="{StaticResource PrimaryButton}" Click="DiscordPopupNo_Click" Cursor="Hand"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
